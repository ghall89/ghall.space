---
import BlogHeader from '@components/BlogHeader.astro';
import Tags from '@components/Tags.astro';

interface Post {
	data: {
		title: string;
		pubDate: Date;
		tags: string[];
	};
	slug: string;
}

interface Props {
	post: Post;
}

const { post } = Astro.props;
const { data, slug } = post;
---

<article>
	<BlogHeader title={post.data.title} date={data.pubDate} slug={slug} />
	<Tags tags={data.tags} />
</article>
